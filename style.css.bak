/* General Styles */
body {
  font-family: Arial, sans-serif;
  background-color: #f4f4f4;
  margin: 0;
  padding: 20px;
  text-align: center;
}

.container {
  max-width: 600px;
  margin: 0 auto;
  background-color: #fff;
  padding: 20px;
  border-radius: 8px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

/* Button Styles */
button {
  background-color: #4CAF50;
  color: white;
  padding: 10px 20px;
  margin: 10px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}

button:hover {
  background-color: #45a049;
}

/* Error message styling */
.error {
  background-color: #ffcccb;
  color: red;
  padding: 15px;
  margin: 10px 0;
  border-radius: 5px;
  font-weight: bold;
  display: none; /* Initially hidden */
}

/* Battery Level Styling */
#batteryLevel {
  margin-top: 20px;
  background-color: #ddd;
  border-radius: 5px;
  padding: 5px;
  width: 200px;
  margin: 0 auto;
}

#batteryBar div {
  height: 20px;
  background-color: green;
  border-radius: 5px;
}

#batteryText {
  margin-top: 10px;
  font-size: 18px;
  font-weight: bold;
}

/* QR Code Styling */
#qrcode {
  margin-top: 20px;
}
